<script>
  function checkPassword() {
    const input = document.getElementById('pw');
    if (input.value === '020225') {
      document.getElementById('lockscreen').style.display = 'none';
    } else {
      input.classList.add('shake');
      setTimeout(() => input.classList.remove('shake'), 500);
    }
  }

  const metDate = new Date('2024-09-24');
  const datingDate = new Date('2025-02-02');
  function updateTimeline() {
    const now = new Date();
    const daysSinceMet = Math.floor((now - metDate)/(1000*60*60*24));
    const daysSinceDating = Math.floor((now - datingDate)/(1000*60*60*24));
    document.getElementById('timeline-text').innerHTML = `
      <p>We first spoke: <b>September 24, 2024</b> (${daysSinceMet} days ago)</p>
      <p>We started dating: <b>February 2, 2025</b> (${daysSinceDating} days ago)</p>
      <p>Current time: <b>${now.toLocaleString()}</b></p>
    `;
  }
  setInterval(updateTimeline,1000);
  updateTimeline();

  setInterval(() => {
    const s=document.createElement('div');
    s.classList.add('sparkle');
    s.style.left=Math.random()*100+'vw';
    s.style.top=Math.random()*100+'vh';
    document.body.appendChild(s);
    setTimeout(()=>s.remove(),2000);
  },800);

  const startDating = new Date("2025-02-02");
  function updateLoveDuration(){
    const now=new Date();
    let months=(now.getFullYear()-startDating.getFullYear())*12;
    months+=now.getMonth()-startDating.getMonth();
    let days=now.getDate()-startDating.getDate();
    if(days<0){months-=1;days+=new Date(now.getFullYear(),now.getMonth(),0).getDate();}
    document.getElementById("loveDuration").innerText=`${months} months and ${days} days`;
  }
  setInterval(updateLoveDuration,1000);
  updateLoveDuration();
</script>

<section id="countdown">
    <h2>Love Countdown</h2>
    <p id="loveDuration"></p>
    <small>For each day I've loved you, and for each day I'll continue to love you.<br>(P.S. it's one month under what you think ❤️)</small>
</section>

